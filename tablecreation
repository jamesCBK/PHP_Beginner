   );
   $content  = "";  $temp_col = "";
   $temp_data = "";
   $Total_node = count($Appliances_list);
   $Total_caption=count($caption); 
   $Table_Construct = "<tr>";
   for($captions=0;$captions<$Total_caption;$captions++){
   $Table_Construct.="<th>".$caption[$captions]['col_Name']."</th>"; 
   } 
   $Table_Construct.="</tr>";
   for($record=0;$record<$record_count;$record++){       
       $content.="<tr>"; 
     for($column=0;$column<$column_count;$column++){
      $temp_data   = $Appliances_list[$record][$column];
 
  $content.="<td>".$temp_data."</td>";
    
